@model Varsity_Management.Models.Teacher

@{
    ViewData["Title"] = "Delete";
}

<h1>Create</h1>

<div class="row">
    <div class="col-md-10">
        <form asp-action="Delete" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Education_Result" class="control-label"></label>
                <input asp-for="Education_Result" class="form-control" />
                <span asp-validation-for="Education_Result" class="text-danger"></span>
            </div> <div class="form-group">
                <label asp-for="Subject" class="control-label"></label>
                <input asp-for="Subject" class="form-control" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Grade, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.DropDownListFor(Model => Model.Grade, new SelectList(Enum.GetValues(typeof(Grade))), new { @class = "form-control col-md-2" })
                @Html.ValidationMessageFor(model => model.Grade, "", new { @class = "text-denger" })
            </div>

            <div class="form-group">
                <h1> Are you Sure Want to Delete</h1>
                <input type="submit" value="Delete" class="text-danger" />
            </div>
        </form>
    </div>
</div>