@model IEnumerable<Varsity_Management.Models.Exam>

@{ 
    ViewData["title"] = "index";
    string Name = "";
}

<h1> Index </h1>

<a class="btn btn-success" asp-action="Create"> Create Here</a>
<br />
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Exam_Name)</th>
            <th>@Html.DisplayNameFor(Model => Model.Subject)</th>
            <th>@Html.DisplayNameFor(model => model.Mark)</th>
            <th>@Html.DisplayNameFor(Model => Model.Grade)</th>
            <th>@Html.DisplayNameFor(model => model.Session)</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
            {
            <tr>
                <td>@Html.DisplayFor(c => item.Exam_Name)</td>
                <td>@Html.DisplayFor(c => item.Subject)</td>
                <td>@Html.DisplayFor(c=> item.Mark)</td>
                <td>@Html.DisplayFor(c => item.Grade)</td>
                <td>@Html.DisplayFor(c => item.Session)</td>
                <td>
                    @{ 
                        Name = "";
                        //@foreach(var item1 in item.StudentResults)
                        //{
                        //    Name += (item1.classManagement.Full_Name + " ,");
                        //}

                    }
                    @Name
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.Id"> Update </a>
                    <a asp-action="AssignExam" class="btn btn-secondary"> Assign Exam </a>

                </td>
            </tr>

            }
     
    </tbody>
</table>